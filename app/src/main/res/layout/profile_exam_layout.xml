<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <FrameLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:orientation="vertical">
        <ListView android:id="@+id/exam_list"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"/>
        <TextView android:id="@+id/exam_list_empty"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:text="No exams to show"
                  android:textColor="@color/grey_dark"
                  android:visibility="invisible"/>
    </FrameLayout>
    <TextView android:text=""
              android:id="@+id/text_last_updated"
              android:textStyle="italic"
              android:textColor="#888888"
              android:gravity="center_horizontal"
              android:padding="7dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
    <TextView android:text="Click an exam to add it to your Calendar.\nOnly on-campus exams are shown."
              android:layout_marginBottom="10dp"
              style="@style/Flow.TipBox"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
</LinearLayout>